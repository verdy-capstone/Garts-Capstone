<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cCommAvatarImg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/cCommUsernameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cCommAvatarImg"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/cCommAvatarImg"
        android:text="@string/comments_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="12sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/cCommCommentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cCommUsernameTxt"
        android:layout_alignEnd="@+id/cCommDateTxt"
        android:layout_alignBottom="@+id/cCommAvatarImg"
        android:text="@string/comments_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/cCommDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cCommUsernameTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:text="@string/comments_text_placeholder"
        android:textColor="@color/blackTextColor"
        android:textSize="11sp" />
</RelativeLayout>